m4_defun([en_patch_banner],
[
AT_BANNER([     -- The patch tests for en.names-db will be skipped
     -- unless NamesList.UTF-8 is in the top build directory.])
])

m4_defun([fr_patch_banner],
[
AT_BANNER([     -- The patch tests for fr.names-db will be skipped
     -- unless ListeDesNoms.UTF-8 is in the top build directory.])
])

#--------------------------------------------------------------------------

AT_BANNER([C tests])

AT_SETUP([C create/delete : en.names-db])
AT_CHECK(["${builddir}"/c_create_delete "${abs_top_srcdir}/en.names-db"],
         [0],[ignore],[ignore])
AT_CLEANUP

AT_SETUP([C create/delete: fr.names-db])
AT_CHECK(["${builddir}"/c_create_delete "${abs_top_srcdir}/fr.names-db"],
         [0],[ignore],[ignore])
AT_CLEANUP

AT_SETUP([C open missing])
AT_CHECK(["${builddir}"/c_create_delete "------------i-do-not-exist------------"],
         [1],[ignore],[ignore])
AT_CLEANUP

AT_SETUP([C open corrupted])
AT_CHECK(["${builddir}"/c_create_delete  "${abs_top_builddir}/Makefile"],
         [1],[ignore],[ignore])
AT_CLEANUP

en_patch_banner
AT_SETUP([C patch test: en.names-db])
AT_SKIP_IF([test ! -f "${abs_top_builddir}/NamesList.UTF-8"])
AT_CHECK(["${builddir}"/c_patch_test "${abs_top_srcdir}/en.names-db" "${abs_top_builddir}/NamesList.UTF-8"],
         [0],[ignore],[ignore])
AT_CLEANUP

fr_patch_banner
AT_SETUP([C patch test: fr.names-db])
AT_SKIP_IF([test ! -f "${abs_top_builddir}/ListeDesNoms.UTF-8"])
AT_CHECK(["${builddir}"/c_patch_test "${abs_top_srcdir}/fr.names-db" "${abs_top_builddir}/ListeDesNoms.UTF-8"],
         [0],[ignore],[ignore])
AT_CLEANUP

